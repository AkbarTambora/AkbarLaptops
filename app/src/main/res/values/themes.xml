<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AkbarLaptops" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue_base</item>
        <item name="colorPrimaryVariant">@color/blue_base</item>
        <item name="colorOnPrimary">@color/blue_base</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.AkbarLaptops" parent="Base.Theme.AkbarLaptops" />

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/blue_base</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_icon</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.AkbarLaptops</item>
    </style>
</resources>